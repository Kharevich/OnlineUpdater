<Window x:Class="OnlineUpdater.DownloadProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Width="400" Height="120" Icon="refresh.ico" ResizeMode="NoResize" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Image Source="file-transfer.png" Width="64"></Image>
        <TextBlock Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="16" Margin="0,15,0,0">Загрузка обновления...</TextBlock>
        <ProgressBar Name="progressBar" Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Left" Height="25" Width="270" Margin="0,0,0,15"></ProgressBar>
    </Grid>
</Window>
